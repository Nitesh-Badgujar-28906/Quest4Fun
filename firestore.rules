rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(resource) {
      return request.auth.uid == resource.data.uid;
    }
    
    function isParent(parentId) {
      return request.auth.uid == parentId;
    }
    
    function isChildOwner(childId) {
      return request.auth.uid == childId;
    }

    // Parents collection
    match /parents/{parentId} {
      allow read, write: if isAuthenticated() && isParent(parentId);
    }

    // Children collection
    match /children/{childId} {
      // Allow parents to create children with their own parentId
      allow create: if isAuthenticated() && isParent(request.resource.data.parentId);
      // Allow reading and updating if the user is the child or the parent
      allow read, update, delete: if isAuthenticated() && 
        (isChildOwner(childId) || isParent(resource.data.parentId));
    }

    // Subjects collection (read-only for all authenticated users)
    match /subjects/{subjectId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can modify subjects
    }

    // Levels collection (read-only for all authenticated users)
    match /levels/{levelId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can modify levels
    }

    // Lessons collection (read-only for all authenticated users)
    match /lessons/{lessonId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can modify lessons
    }

    // Progress collection
    match /progress/{progressId} {
      allow read, write: if isAuthenticated() && 
        (isChildOwner(resource.data.childId) || 
         exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
         isParent(get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentId));
    }

    // Game sessions collection
    match /gameSessions/{sessionId} {
      allow read, write: if isAuthenticated() && 
        (isChildOwner(resource.data.childId) || 
         exists(/databases/$(database)/documents/children/$(resource.data.childId)) &&
         isParent(get(/databases/$(database)/documents/children/$(resource.data.childId)).data.parentId));
    }

    // Daily challenges collection (read-only for all authenticated users)
    match /dailyChallenges/{challengeId} {
      allow read: if isAuthenticated();
      allow update: if isAuthenticated() && 
        request.writeFields.hasOnly(['completedBy']) &&
        resource.data.completedBy.hasAll(request.resource.data.completedBy.removeAll([request.auth.uid]));
      allow create, delete: if false; // Only admins can create/delete challenges
    }

    // User preferences and settings
    match /userSettings/{userId} {
      allow read, write: if isAuthenticated() && request.auth.uid == userId;
    }

    // Analytics data (read-only for parents)
    match /analytics/{docId} {
      allow read: if isAuthenticated();
      allow write: if false; // Generated by cloud functions
    }
  }
}