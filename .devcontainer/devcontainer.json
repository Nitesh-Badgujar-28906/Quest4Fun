{
  "name": "Quest4Fun Flutter Development",
  "image": "cirrusci/flutter:stable",
  
  "features": {
    "ghcr.io/devcontainers/features/common-utils:2": {
      "installZsh": true,
      "installOhMyZsh": true,
      "upgradePackages": true
    },
    "ghcr.io/devcontainers/features/git:1": {
      "ppa": true,
      "version": "latest"
    },
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },

  "customizations": {
    "vscode": {
      "extensions": [
        "Dart-Code.dart-code",
        "Dart-Code.flutter",
        "bradlc.vscode-tailwindcss",
        "ms-vscode.vscode-json",
        "rangav.vscode-thunder-client",
        "formulahendry.auto-rename-tag",
        "esbenp.prettier-vscode"
      ],
      "settings": {
        "dart.flutterSdkPath": "/sdks/flutter",
        "dart.sdkPath": "/sdks/flutter/bin/cache/dart-sdk",
        "flutter.sdkPath": "/sdks/flutter"
      }
    }
  },

  "forwardPorts": [3000, 8080, 5000],
  
  "postCreateCommand": "flutter doctor && flutter pub get",
  
  "remoteUser": "cirrus",
  
  "mounts": [
    "source=/var/run/docker.sock,target=/var/run/docker.sock,type=bind"
  ]
}